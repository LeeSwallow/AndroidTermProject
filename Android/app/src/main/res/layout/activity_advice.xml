<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent">

    <!-- 뒤로 가기 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="이전 화면으로 돌아가기"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvAdviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="AI 조언 요청:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack" />


    <!-- 조언 내용 -->

    <ImageButton
        android:id="@+id/btnVoice"
        android:layout_width="42dp"
        android:layout_height="69dp"
        android:layout_marginStart="172dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="소리"
        android:src="@drawable/ic_sound"
        app:layout_constraintBaseline_toBaselineOf="@id/tvAdviceTitle"
        app:layout_constraintStart_toEndOf="@id/tvAdviceTitle" />

    <ImageButton
        android:id="@+id/search_voice_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="이전 화면으로 돌아가기"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 조언 받기 -->
    <ScrollView
        android:layout_width="392dp"
        android:layout_height="425dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnGetAdvice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAdviceTitle"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tvAdviceContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="로딩 중..." />
    </ScrollView>

    <!-- 내 대응 작성 -->


    <Button
        android:id="@+id/btnGetAdvice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:text="조언 받기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/etUserResponse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerDbtSkills"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:entries="@array/dbt_skill_prompt"
        android:prompt="@array/dbt_skill_prompt"
        app:layout_constraintTop_toBottomOf="@id/btnGetAdvice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <EditText
        android:id="@+id/etUserResponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:hint="나의 대응 작성:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveResponse" />

    <!-- 작성 완료 -->
    <Button
        android:id="@+id/btnSaveResponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="작성 완료"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
