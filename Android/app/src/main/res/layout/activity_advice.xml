<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAdvicePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI 조언"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAdviceContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="로딩 중..." />

    <Button
        android:id="@+id/btnGetAdvice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI 조언 받기"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etDbtSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbt 기술을 입력하세요"
        android:layout_marginTop="16dp" />


    <EditText
        android:id="@+id/etUserResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="어떻게 대응하셨나요?"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnSaveResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_marginTop="16dp" />

</LinearLayout>