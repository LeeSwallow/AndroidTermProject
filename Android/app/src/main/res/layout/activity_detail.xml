<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <!-- 상단 앱바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/md_theme_light_primary"
        app:title="일기 상세"
        app:titleTextColor="@color/md_theme_light_onPrimary"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:elevation="4dp" />
        
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-06-07"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/md_theme_light_primary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- 상황 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상황:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etSituation"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="12dp"
                    android:textColor="@color/input_card_text"
                    android:hint="상황을 입력하세요"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- 감정/강도 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감정:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etEmotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="8dp"
                    android:textColor="@color/input_card_text"
                    android:hint="감정"
                    android:minLines="1"
                    android:gravity="top|start" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강도:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etIntensity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_card"
                    android:padding="8dp"
                    android:textColor="@color/input_card_text"
                    android:hint="0~10"
                    android:minLines="1"
                    android:gravity="top|start" />
            </LinearLayout>

            <!-- 생각 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생각:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etThought"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="12dp"
                    android:textColor="@color/input_card_text"
                    android:hint="생각을 입력하세요"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- 반응 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반응:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etReaction"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="12dp"
                    android:textColor="@color/input_card_text"
                    android:hint="반응을 입력하세요"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- DBT 스킬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DBT 스킬:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />
                <Spinner
                    android:id="@+id/spDbtSkill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- 나의 대응 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대응:"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onBackground"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp" />
                <EditText
                    android:id="@+id/etUserResponse"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_card"
                    android:padding="12dp"
                    android:textColor="@color/input_card_text"
                    android:hint="나의 대응을 입력하세요"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- 수정/삭제 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수정"
                    android:background="@drawable/bg_main_card2"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp" />
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="삭제"
                    android:background="@drawable/bg_main_card"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:elevation="2dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>